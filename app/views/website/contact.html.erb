<% content_for :head do  %>
  <%= stylesheet_link_tag "contact.css" %>
<% end %>

<div id="page-title">

        <h1>Contact us</h1>
        <p>Want to request more information about Fleetnext ?</p>

</div> <!-- /page-title -->


<div id="contact-map">
        <iframe width="100%" height="180" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="http://maps.google.co.in/maps?f=q&amp;source=s_q&amp;hl=en&amp;geocode=&amp;q=Mumbai,+Maharashtra&amp;aq=0&amp;oq=mumbai&amp;sll=21.125498,81.914063&amp;sspn=23.507126,43.286133&amp;ie=UTF8&amp;hq=&amp;hnear=Mumbai,+Maharashtra&amp;t=m&amp;z=10&amp;ll=19.075984,72.877656&amp;output=embed"></iframe>
</div> <!-- /contact-map -->



<div id="content">

        <div class="container">

                <div class="row">

                        <div class="grid-8">

                                <h3>Send us a message</h3>

                                <p>Use the form below to send us your query.</p>

                                <form method="post" action="/contact">
                                        <fieldset>
                                                <div class="clearfix">
                                                        <label for="name"><span>Name:</span></label>
                                                        <div class="input">
                                                                <input tabindex="1" size="18" id="name" name="name" type="text" value="">
                                                        </div>
                                                </div>

                                                <div class="clearfix">
                                                        <label for="email"><span>Email:</span></label>
                                                        <div class="input">
                                                                <input tabindex="2" size="25" id="email" name="email" type="text" value="" class="input-xlarge">
                                                        </div>
                                                </div>

                                                <div class="clearfix">
                                                        <label for="message"><span>Message:</span></label>
                                                        <div class="input">
                                                                <textarea tabindex="3" class="input-xlarge" id="message" name="body" rows="7"></textarea>
                                                        </div>
                                                </div>

                                                <div class="actions">
                                                        <button tabindex="3" type="submit" class="btn btn-success btn-large">Submit message</button>
                                                </div>
                                        </fieldset>
                                </form>

                        </div> <!-- /grid-8 -->


                        <div class="grid-4">

                                <div class="sidebar">

                                        <h3> More Information</h3>

                                        <p>
                                                <strong>Address</strong> <br>
                                                Shop No.7, 15th Road <br/>
